# File managed by puppet
libpam-ldap     libpam-ldap/rootbindpw  password  <%=ldap_admin_password%>
libpam-ldap     libpam-ldap/bindpw      password  <%=ldap_admin_password%> 
libpam-ldap     shared/ldapns/base-dn   string  <%=ldap_suffix%>
libpam-ldap     shared/ldapns/ldap-server       string  <%=ldap_uri%>
libpam-ldap     libpam-ldap/pam_password        select  crypt
libpam-ldap     libpam-ldap/binddn      string  <%=ldap_base%>
libpam-ldap     libpam-ldap/rootbinddn  string  <%=ldap_base%>
libpam-ldap     libpam-ldap/dbrootlogin boolean true
# Manage libpam-ldap configuration automatically?
libpam-ldap     libpam-ldap/override    boolean true
libpam-ldap     shared/ldapns/ldap_version      select  3
libpam-ldap     libpam-ldap/dblogin     boolean true
