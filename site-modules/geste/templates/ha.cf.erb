# file managed by puppet

# Logging
debug        1
use_logd     false
logfacility  daemon

# Misc Options
traditional_compression  off
compression              bz2
coredumps                true

# Communications
ping         128.179.67.1
udpport      <%= pacemaker_port %>
<% if has_variable?("geste_master") and geste_master -%>
ucast        eth1 gestepc3.epfl.ch
<% else -%>
ucast        eth1 gestepc4.epfl.ch
<% end -%>
autojoin     none

node         gestepc3.epfl.ch
node         gestepc4.epfl.ch

# Thresholds (in seconds)
keepalive    <%= pacemaker_keepalive %>
warntime     6
deadtime     10
initdead     15

crm respawn
