#!/bin/bash

# setting proxy

case $(dnsdomainname) in
  'wrk.cby.camptocamp.com')
  export http_proxy='http://proxy.cby.camptocamp.com:3128'
  ;;
  'wrk.lsn.camptocamp.com')
  export http_proxy='http://proxy.lsn.camptocamp.com:3128'
  ;;
esac

if [ ! -f /usr/src/<%=vmware%> ]; then
  echo "Recuperation de l'archive <%=vmware%>.... ceci peut prendre un petit moment."
  wget -c --progress=bar -P /usr/src/ http://sa.camptocamp.com/files/<%=vmware%>
fi

echo "Installation de <%=vmware%>..."
chmod +x /usr/src/<%=vmware%>
/usr/src/<%=vmware%> --required
echo "En cas d'erreur, merci de lancer la commande suivante : sudo vmware-config.pl"
