# file managed by puppet
#
# main configuration used by script multithreaded-rdiff-backup.py
#

[mainconfig]
max_threads = <%= rdiff_backup_max_threads %>
logs_dir = <%= rdiff_backup_logs_dir %>
smtp_server = <%= rdiff_backup_smtp_server %>
enable_mail = <%= rdiff_backup_enable_mail %>
<% if rdiff_backup_enable_mail == "1" %>
mail_from = <%= rdiff_backup_mail_from %>
mail_to = <%= rdiff_backup_mail_to %>
<% end -%>

